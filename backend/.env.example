# Discord OAuth
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=http://localhost:8000/auth/discord/callback

# JWT
JWT_SECRET=change-me-to-a-random-secret
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=72

# Database — use postgresql+asyncpg://user:pass@host/db for Postgres
DATABASE_URL=sqlite+aiosqlite:///./osr_web.db

# Frontend URL (default for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# CORS — comma-separated allowed origins, or leave empty to auto-allow
# localhost + any IP on any port. Set explicitly in production.
# ALLOWED_ORIGINS=http://localhost:3000,http://YOUR_PUBLIC_IP:3000

#SMTP configuration for bug reports
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=your-email@gmail.com
BUG_REPORT_TO=where-reports-go@gmail.com